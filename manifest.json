{
	"manifest_version": 2,

	"name": "Picture In Picture",
	"description": "Turns whatever YouTube video you're watching into an overlayed borderless window",
	"version": "0.0.0.1",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"page_action": 
	{
		"default_icon": "icon.png",
		"default_title": "PIP this!"
	},

	"permissions":
	[
		"declarativeContent",
		"tabs"
	]
}